@model TrainingSystem.ViewModels.CourseVM

@{
    ViewData["Title"] = "Course Details";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">@Model.Name - Course Details</h3>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Course Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Degree</dt>
                <dd class="col-sm-9">@Model.Degree</dd>

                <dt class="col-sm-3">Min Degree</dt>
                <dd class="col-sm-9">@Model.MinDegree</dd>

             
            </dl>

            @if (ViewBag.QRCode != null)
            {
                <div class="text-center mt-4">
                    <h5>QR Code</h5>
                    <img src="data:image/png;base64,@Convert.ToBase64String(ViewBag.QRCode)" class="img-thumbnail" style="max-width: 250px;" alt="QR Code" />
                </div>
            }

            <div class="mt-4 text-end">
                <a asp-action="Index" class="btn btn-outline-secondary">Back to Courses</a>
            </div>
        </div>
    </div>
</div>
