@model TrainingSystem.ViewModels.InstructorVM

@{
    ViewData["Title"] = "Instructor Details";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-dark text-white">
            <h3 class="mb-0">@Model.Name - Instructor Details</h3>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Address</dt>
                <dd class="col-sm-9">@Model.Address</dd>

            @if (ViewBag.QRCode != null)
            {
                <div class="text-center mt-4">
                    <h5 class="text-muted">Scan QR Code</h5>
                    <img src="data:image/png;base64,@Convert.ToBase64String(ViewBag.QRCode)" class="img-thumbnail border border-primary" style="max-width: 250px;" alt="QR Code" />
                </div>
            }

            <div class="mt-4 text-end">
                <a asp-action="Index" class="btn btn-outline-secondary">Back to Instructors</a>
            </div>
        </div>
    </div>
</div>
